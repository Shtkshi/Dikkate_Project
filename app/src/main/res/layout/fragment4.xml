<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


            <FrameLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="100dp">

            <com.cunoraz.continuouscrollable.ContinuousScrollableImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:direction="left"
                app:duration="2500"
                app:imageSrc="@drawable/scrolling_background"
                app:scaleType="centerInside" />

            <com.cunoraz.continuouscrollable.ContinuousScrollableImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:direction="left"
                app:duration="4000"
                app:imageSrc="@drawable/scrolling_foreground" />

            <com.cunoraz.continuouscrollable.ContinuousScrollableImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:direction="right"
                app:duration="6000"
                app:imageSrc="@drawable/van" />
            </FrameLayout>




        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Recycler_Cart_fragment4"

            />

    </LinearLayout>


</ScrollView>